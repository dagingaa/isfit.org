<%content_for :head do %>
  <meta property="og:title" content="<%if @article.title_en != ""%><%=@article.title_en%><%else%><%=@article.title_no%><%end%>"/>
  <meta property="og:type" content="non_profit"/>
  <meta property="og:image" content="http://www.isfit.org<%= @article.frontend_article_image.url(:front_large) %>"/>
  <meta property="og:url" content="<%=(request.url).match(/([A-Za-z0-9:._\/]+)/)[1]%>"/>
  <meta property="og:site_name" content="ISFiT 2013"/>
  <meta property="fb:app_id" content="111446192243028"/>
  <meta property="og:description" content="<%=@article.ingress%>"/>
<%end%>

<div id="article-wrapper">
  <% if @article.body == "" && @article.ingress == ""
       in_language = false
    else
      in_language = true
  end%>


  <article id="article">

    <% unless in_language%>
      <div class="alert">
        <button class="close" data-dismiss="alert">Ã—</button>
        We are sorry, but the article is not available in your language.
      </div>
    <%end%>

    
    <header>
      <img src="http://lorempixel.com/770/400/people">
      <!-- Playing around...
        <% if @article.frontend_article_image? %>
          <%= image_tag @article.frontend_article_image.url(:front_large) %>
        <% else %>
          <%=image_tag "article_images/"+@article.id.to_s + "_3.jpg"%><br>
        <% end %>
      -->
        <caption>
          <% if I18n.locale.to_s == 'no' %>
            <%=@article.image_text_no%>
          <%else%>
            <%=@article.image_text_en%>
          <%end%>
        </caption>

      <h1>
        <%if in_language%>
          <%= @article.title %>
        <%else%>
          <%= I18n.locale.to_s == 'no' ? @article.title_en : @article.title_no%>
        <%end%>
      </h1>
    </header>


    <section class="article-ingress">
        <%=raw format(I18n.locale.to_s == 'no' ? @article.ingress_no : @article.ingress_en) %>
    </section>


    <section class="article-credits">
      <span>Text: <%=raw @article.byline%>
      <%if @article.image_credits != ""%>Photo: <%=raw @article.image_credits%><%end%>
      Date: <%=  @article.created_at.strftime("%F")%></span>
    </section>

    <div class="row">
      <div class="span5">
        <section class="article-text">
        <%= raw format( I18n.locale.to_s =='no' ? @article.body_no : @article.body_en) %>
        </section>
      </div>
      <!-- Just playing around... -->
      <div class="span3">
        <blockquote>
          <p>It is better to have loved and lost than never to have lost at all.</p>
          <small>Samuel Butler</small>
        </blockquote>
        <div class="well">
          <h1>Faktaboks</h1>
          <ul>
            <li>Dette er sample fakta</li>
            <li>Dette er sample fakta</li>
            <li>Dette er sample fakta</li>
            <li>Dette er sample fakta</li>
            <li>Dette er sample fakta</li>
          </ul>
        </div>

        <img src="http://lorempixel.com/270/400/people">
      </div>
    </div>

  </article>


  <%if @article.got_comments%>
    <div class="fb-comments" data-href="<%= article_url(params[:tab], @article) %>" data-num-posts="2" data-width="550"></div>
  <%end%>

</div>


