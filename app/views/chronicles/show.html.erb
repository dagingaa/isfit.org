<%content_for :head do %>
  <meta property="og:title" content="<%if @chronicle.title_en != ""%><%=@chronicle.title_en%><%else%><%=@chronicle.title_no%><%end%>"/>
  <meta property="og:type" content="non_profit"/>
  <meta property="og:url" content="<%=(request.url).match(/([A-Za-z0-9:._\/]+)/)[1]%>"/>
  <meta property="og:site_name" content="ISFiT 2011"/>
  <meta property="fb:app_id" content="111446192243028"/>
  <meta property="og:description" content="<%=@chronicle.ingress%>"/>
<%end%>

<!-- Localize this! -->


<h1>  <%= @chronicle.title %></h1>
<h4>  <%= @chronicle.author %></h4>
<p class="ingress">
  <b><%=raw format(@chronicle.ingress) %></b>
</p>
<p class="body">
  <%=raw format(@chronicle.body) %>
</p>
<%if @chronicle.got_comments%>
<div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#appId=111446192243028&amp;xfbml=1"></script><fb:comments width="550"></fb:comments>
<%end%>

