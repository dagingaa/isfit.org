<h3><%= t('host.registration') %></h3>
<% form_for @host, :html => { :class => "yform columnar" }, :url => hosts_path(params[:tab])  do |f| %>
  <fieldset>
    <legend><%= t('host.mandatory') %></legend>
    <div class="type-text">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="type-text">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class="type-text">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
    <div class="type-text">
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %>
    </div>
    <div class="type-text">
      <%= f.label :place %>
      <%= f.text_field :place %>
    </div>
    <div class="type-text">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
    <div class="type-text">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="type-select">
      <%= f.label :age %>
      <%
        ages = []
        for i in 18..110
          ages << i
        end
      %>
      <%= f.select :age , ages %>
    </div>
    <div class="type-select">
      <%= f.label :number %>
      <% 
        choices = []
        for i in 1..9
          choices << i
        end
      %>
      <%= f.select :number , choices %>
    </div>
  </fieldset>
  <fieldset>
    <legend><%= t('host.optional') %></legend>
    <div class="type-text">
      <%= f.label :where %>
      <%= f.text_field :where %>
    </div>
    <div class="type-check">
      <%= f.check_box :arrival_before %>
      <%= f.label :arrival_before %>
    </div>
    <div class="type-check">
      <%= f.check_box :leave_late %>
      <%= f.label :leave_late %>
    </div>
    <div class="type-select">
      <%= f.label :skies %>
      <%
        choice = []
        for i in 0..9
          choice << i
        end
      %>
      <%= f.select:skies, choice %>
    </div>
    <div class="type-text">
      <%= f.label :preference %>
      <%= f.text_area :preference, :rows => 2 %>
    </div>
    <div class="type-check">
      <%= f.check_box :vegetarian %>
      <%= f.label :vegetarian %>
    </div>
    <div class="type-check">
      <%= f.check_box :smoker %>
      <%= f.label :smoker %>
    </div>
    <div class="type-text">
      <%= f.label :pet %>
      <%= f.text_field :pet %>
    </div>
    <div class="type-select">
      <%= f.label :animal_number %>
      <%= f.select :animal_number, choice %>
    </div>
    <div class="type-text">
      <%= f.label :language_speak %>
      <%= f.text_field :language_speak %>
    </div>
    <div class="type-check">
      <%= f.check_box :before %>
      <%= f.label :before %>
    </div>
    <div class="type-select">
      <%= f.label :know_isfit %>
      <%= f.select(:know_isfit, {'Written media' => 'Written media', 'E-mail' => 'E-mail', 'Friends' => 'Friends', 'Posters, screens, stands, flyers' => 'Posters, screens, stand, flyer', 'Other' => 'Other', 'Members of the ISFiT organization' => 'Members of the ISFiT organization'}) %>
    </div>
    <div class="type-text">
      <%= f.label :member_name %>
      <%= f.text_field :member_name %>
    </div>
    <div class="type-text">
      <%= f.label :why %>
      <%= f.text_area :why, :rows => 2 %>
    </div>
    <%= form_tag ({:action=> "done", :id => params[:id]} ) %>
    <div class="type-button">
      <%= submit_tag "Submit" %>
    </div>
  </fieldset>

<% end %>

