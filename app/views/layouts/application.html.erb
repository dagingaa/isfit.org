</head>
<body>
<div id="hovedramme" class="container_24"> <!-- Start hovedramme -->
<div id="omeny" class="grid_25"> <!-- Start omeny -->
<div id="olinker" class="grid_10"> <!-- Start olinker -->
<%= link_to t('layout.internal'), "https://internal.isfit.org/", :class => "olink" %>
<%
current_tab = nil
style = ""
Tab.find(:all, :conditions => {:top_bar=>"1"}).each do |tab|

if tab.tag == params[:tab] 
current_tab = tab
style = "selected"
else
style = ""
end

link = nil

if tab.sublinks.first.page_id == 0
if tab.sublinks.first.url != nil
  arr = tab.sublinks.first.url.partition("#")
link =  url_for(:controller=>arr[0], :action=>arr[2], :tab=>tab.tag) 
  else
  link = tab.sublinks.first.external_url
  end
  else
link = page_path(tab.sublinks.first.page, :tab=>tab.tag)
  end

  if style == "" %>
  <%= link_to tab.name, link, :class=>"olink" %>
  <%	else %>
  <%= link_to tab.name, link,:id => style, :class=>"olink"%>
  <%	end
  end
  %>


  </div><!-- Slutt olinker -->


  <!--COUNTDOWN-->
  <div id="counter" class="counter grid_10">
  <ul class="countdown">
  <li><div class="countdown_num" id="countdown_day"></div><div id="Days"></div></li>
  <li><div class="countdown_num" id="countdown_hour"></div><div id="Hours"></div></li>
  <li><div class="countdown_num" id="countdown_min"></div><div id="Minutes"></div></li>
  <li><div class="countdown_num" id="countdown_sec"></div><div id="Seconds"></div></li>
  </ul>
  </div>

  <script type="text/javascript">
  countdown(2011, 2, 11);
  </script>
  <!--SLUTT COUNTDOWN-->

  <div id="odiverse" class="grid_4"><!-- Start odiverse -->

  <%= link_to (image_tag("gb.png"),{:tab=>params[:tab], :locale=>"en"}, :class=>"oflagg") %>
  <%= link_to (image_tag("no.png"),{:tab=>params[:tab], :locale=>"no"}, :class=>"oflagg") %>
  <%= link_to (image_tag("facebook.png"), "http://www.facebook.com/#!/pages/ISFiT/11541693212", :target=>"_blank", :class=>"obilde")%>
  <%= link_to (image_tag("twitter.png"), "http://twitter.com/isfit", :class=>"obilde", :target=>"_blank")%>


  <!--<a href="#rss" class="obilde"><img src="images/rss.png"></a>-->
  </div><!-- Slutt odiverse -->
  </div><!-- Slutt omeny -->
  <div id="header" class="grid_25" ><!-- Start header -->

  <div id="slider-wrapper">
  <div id="slider" class="nivoSlider">
  <%Slide.all.shuffle.each do |s|%>
  <%if s.cropped %>
  <%=link_to (image_tag s.image.url, :title=>s.content), s.link%>
  <%end%>
  <%end%>
  <%#=link_to (image_tag("header_#{Language.to_s}.png", :class=>"isfitlogo"), root_path) %>
  </div>
  </div>

  <script type="text/javascript">
  $(window).load(function() {
      $('#slider').nivoSlider({effect:'fade',controlNav:false,pauseTime:7000});
      });
</script>
</div><!-- Slutt header -->
<div id="meny" class="grid_25"><!-- Start meny -->
<div id="faner" class="grid_20">
<!-- Start faner -->
<%
Tab.where(:top_bar => 0).order('weight').each do |tab|
if tab.name != ""
style = ""
if tab.tag == params[:tab]
current_tab = tab
style="selected"
else
style = ""
end
link = nil
if tab.sublinks.first.page_id == 0 or tab.sublinks.first.page_id == nil
if tab.sublinks.first.url != nil
  arr = tab.sublinks.first.url.partition("#")
link =  url_for(:controller=>arr[0], :action=>arr[2], :tab=>tab.tag)
  end
  else
link = page_path(tab.sublinks.first.page, :tab=>tab.tag)
  end
  %>
  <%= link_to tab.name, link, :class => style%><%=image_tag("menyspacer.png", :class=>"menyspacer")%>
  <%	end
  end %>

  </div><!-- Slutt faner -->
  <div id="sok" class="grid_4"><!-- Start søk -->
  <!-- <input type="button" value="" class="btn"><input name="search" type="text" value="<%=t('layout.search')%>">-->

  </div><!-- Slutt søk -->

  </div><!-- Slutt meny -->
  <div id="submeny" class="grid_25"><!-- Start submeny -->
  <%
  current_tab.sublinks.each do |sub|
  active = false
  link = nil

  if sub.page_id == 0 or sub.page_id == nil
  if sub.url != nil
  arr = sub.url.partition("#")
link =  url_for(:controller=>arr[0], :action=>arr[2], :tab=>current_tab.tag)
  elsif sub.external_url != nil
  link = sub.external_url
  end
  else
link = page_path(sub.page, :tab=>current_tab.tag)
  end

  if request.request_uri == link
  active = true
  end

  if link != nil %>
  <%=link_to(sub.title, link, :class=> active ? "a_sublink" : "ina_sublink")%><%
  end
  end %>

  </div><!-- Slutt submeny -->
  <div id="ramme" class="grid_25"><!-- Start ramme -->
  <div id="venstreramme" class="grid_5"><!-- Start venstreramme -->
  <div id="boksgronn_bg" class="grid_5 alpha omega"><!-- Start grønn -->
  <div id="boksgronn" class="grid_5 alpha omega">
  <%=link_to I18n.locale.to_s == 'en' ? image_tag("blivert_eng.png") : image_tag("blivert_tekst.png"), "http://www.isfit.org/info/hosts/new" %>
  <br /><br />
  <%= link_to I18n.locale.to_s == 'en' ? image_tag("stott_deltaker_eng.png") : image_tag("stott_deltaker.png"), "http://www.isfit.org/info/donations/donate" %>
  </div>
  </div><!-- Slutt grønn -->
