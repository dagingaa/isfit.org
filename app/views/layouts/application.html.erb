  <div class="boks">
  <h3><%= link_to "Student Peace Prize", "http://www.studentpeaceprize.org" %></h3><br />
  <ul style="list-style-type:none; margin: 0 0 0 -20px;">
  <% count = 0
  SppArticle.find_five_latest.each do |article|%>
  <li><%if article.youtube_link.blank?%><%= link_to (image_tag  "spp_article_images/" + "#{article.id}_3.jpg", :width=>"50"), "http://www.studentpeaceprize.org/articles/#{article.id}?tab=home", :target=>"_blank"%><%end%>
