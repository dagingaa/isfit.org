   <%  count = count +1
unless count == 5%>
  <hr style="margin-left:20px">
  <%end%>
  <% end %>

  </ul>
  </div>
  </div>
  </div><!-- Slutt rød -->
  
  </div><!-- Slutt venstreramme -->
  <div id="midtramme" class="grid_14"><!-- Start midtramme -->
