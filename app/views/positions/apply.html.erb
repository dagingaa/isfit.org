<h1><%= t("position.form")%></h1>
<%= render 'partials/error', :locals=> {:model => @applicant} %>

<p><%= t("position.fill_in") %></p>
<%= form_for(@applicant, :html => { :class => "yform columnar" }, :url => {:controller => :positions, :action => :save}) do |f| %>
  <fieldset>
    <legend><%= t("position.personal_info") %></legend>
    <div class="type-text">
      <%= f.label :firstname %>
      <%= f.text_field :firstname, :placeholder => t("person.first_name") %>
    </div>
    <div class="type-text">
      <%= f.label :lastname %>
      <%= f.text_field :lastname, :placeholder => t("person.last_name") %>
    </div>
    <div class="type-text">
      <%= f.label :mail %>
      <%= f.text_field :mail, :placeholder => t("person.email_ntnu") %>
    </div>
    <div class="type-text">
      <%= f.label :phone %>
      <%= f.text_field :phone, :placeholder => t("person.phone_nor") %>
    </div>
  </fieldset>
  <fieldset>
    <legend><%= t("position.application") %></legend>
    <div class="type-select">
      <%= f.label :position_id_1 %>
      <%= f.select :position_id_1, @positions.to_select_reverse %>
    </div>
    <div class="type-select">
      <%= f.label :position_id_2 %>
      <%= f.select :position_id_2, @positions.to_select_reverse %>
    </div>
    <div class="type-select">
      <%= f.label :position_id_3 %>
      <%= f.select :position_id_3, @positions.to_select_reverse %>
    </div>
    <div class="type-text">
      <%= f.label :information %>
      <%= f.text_area :information, :rows => 10 %>
    </div>
    <div class="type-text">
      <%= f.label :background %>
      <%= f.text_area :background, :rows => 10 %>
    </div>
    <!--
  <p>
    <b><%= t("position.hear_about") %>:</b><br>
    <%= f.text_area(:heardof,:cols => 63, :rows=>5)%><br>
  </p>
  -->
  <div class="type-button">
  <%= f.submit t("position.apply"), :class => "submit" %>
</div>
<% end %>


<%end%>
