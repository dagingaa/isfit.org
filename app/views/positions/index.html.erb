  <% else %>
    <h1><%= t("position.motivational") %></h1>
    <%= raw format("##yt hxUO456dsLw yt##") %>
    <div class="fb-like" data-href="<%= positions_url %>" data-send="false" data-width="550" data-show-faces="true"></div>
