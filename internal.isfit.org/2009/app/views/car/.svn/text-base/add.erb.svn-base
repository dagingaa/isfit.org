	<%form_for :car, @car, :url => { :action => "update" }, :html=> { :multipart => true }  do |f|%>
		<h1>Add a new car</h1>
	
		<table>
			<tr>
				<th align=left>Name:
				<td onFocus=""><%=f.text_field :name, :value=>"Write name", :size => "40"%>
			</tr>
			<tr>
				<th align=left>Description:
				<td><%=f.text_area :description, :size=>"39x5"%>
			</tr>
			<tr>
				<th align=left>Short description:
				<td><%=f.text_field :short_description, :size => "40"%>
			</tr>
			<tr>
				<th align=left>Picture:
				<td><%=file_field_tag "image", :size => "31"%>
			</tr>
			<tr>
				<th align=left>Maximum passengers:
				<td><%=f.text_field :max_passengers, :size => "40"%>
			</tr>
			<tr>
				<th align=left>Transport only?</th>
				<td><%=f.check_box :transport_only%></td>
			</tr>
		</table>
		<%=f.hidden_field :deleted, :value => '0'%>
		<br>
		<%=submit_tag'Add car'%>
	<%end%>