<h2>Recent tracks</h2>
<table>
	<% @user.recent_tracks.each do |t|  %>
	<tr>
		<td>
		<a href="<%= t.url %>"><%= t.artist %> - <%= t.name %></a></td>
		<td><%= t.date.strftime(" at %H:%M, %d/%m/%Y")%></td>
		<% if t.streamable == 'true' %>
			<td><%= link_to(image_tag("icon_play.png", :style => "border: 0px"), t.url+"?autostart", :target => "_blank") %></td>
		<% end %>
	</tr>
	<% end %>
</table>
<p><%=image_tag("icon_play.png")%> - Click me to stream at last.fm :)</p>

