<h1>Articles</h1>
<p>Below is a list of all articles available for isfit.org:</p>
<table cellspacing="0" cellpadding="4" style="border: 1px solid #ccc">
	<tr>
        <td width="200"><b><%= sort_header_tag('title_en',
            :text => 'English title') %></b></td>
        <td width="230"><b><%= sort_header_tag('title_no',
            :text => 'Norwegian title') %></b></td>
        <td width="80"><b><%= sort_header_tag('created_at',
            :text => 'Created') %></b></td>
        <td width="70"><b><%= sort_header_tag('weight',
            :text => 'Priority') %></b></td>
        <td width="60"><b><%= sort_header_tag('list',
            :text => 'Visible') %></b></td>
        <td width="100"><b><%= sort_header_tag('press_release',
            :text => 'Press release') %></b></td>
		<td></td>
		<td></td>
    </tr>
<% row = 1 %>
<% @articles.each do |article| %>
    <tr class="article_tr<%= row % 2 == 1 ? ' alternate' : '' %>">
        <td><%= article.title_en != '' ? article.title_en : "<em>No English version</em>" %> </td>
        <td><%= article.title_no != '' ? article.title_no : "<em>No Norwegian version</em>" %></td>
		<td><%= article.created_at.strftime("%d %b %Y") %></td>
		<td><%= $weights_text[article.weight] %></td>
		<td><%= article.list ? "Yes" : "No" %></td>
		<td><% if article.press_release == 1%>Yes<%else%>No<%end%></td>
        <td>
            <%= link_to(image_tag("icon/edit.png",
                :alt => "E", :title => "Edit", :border => 0),
                {:action => 'create', :id => article.id}) %>
        </td>
		<td>
            <%= link_to(image_tag("icon/trash.png",
				:alt => "Delete", :title => "Delete",:border => 0), 
				{:action => "delete", :id => article.id},
				:confirm => 'Are you sure you want to delete this article?') %>
        </td>
    </tr>
<% row += 1 %>
<% end %>
</table>
<p><%= will_paginate @articles %></p>
