<h1>Authentication required</h1>
<% if flash[:warning] %>
<p><%= flash[:warning] %></p>
<% else %>
<p>Please enter your credentials and press Log in to continue.</p>
<% end %>
<% form_tag do %>
<div>
<b>Username</b><br />
<%= text_field_tag("username", nil, {"class" => "form"}) %>
</div>
<div>
<b>Password</b><br />
<%= password_field_tag("password", nil, {"class" => "form"}) %>
</div>
<br />
<%= submit_tag("Log in") %>
<% end %>
<br /><br />
