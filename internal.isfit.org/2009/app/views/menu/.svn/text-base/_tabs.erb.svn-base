<% unless logged_in? %>
<%= link_to('Log in', {}, {:class => 'active'}) %>
<% else %>
<% @menu[:tabs].each do |tab| %>
	<%= link_to(tab[:title], {:tab => tab[:title].downcase, 
		:controller => tab[:groups].first[:links].first[:controller], 
		:action => tab[:groups].first[:links].first[:action]},
		tab == @menu[:tab] ? {:class => "active"} : {}) %>
<% end %>
<%= link_to('Log out', {:controller => 'login', :action => 'logout'}) %>
<% end %>
