<% if logged_in? %>
<% @menu[:tab][:groups].each do |group|  %>
<p>
	<div class="menu_link_group">
		<b><%= group[:title] %></b><br />
		<% group[:links].each do |link| %>
			<%= link_to(link[:title], {:controller => link[:controller],
				:action => link[:action]}) %><br />
		<% end %>
	</div>
</p>
<% end %>
<% end %>
