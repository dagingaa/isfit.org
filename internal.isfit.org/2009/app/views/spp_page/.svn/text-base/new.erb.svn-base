<% if @spp %>
   <h1> Edit a page for the "Student Peace Prize" homepage: </h1>
  <% form_for :spp_page, @spp, :url => { :action => "new" }, :html => {:method => "get"} do |f| %>
Title: <br>
<%= f.text_field "title", "value" => @spp.title, :size => 102 %>
    
<br>Ingress:<br>
<%= f.text_area "ingress", "value" => @spp.ingress, :rows => 10, :cols => 100 %>
   
<br>Text:<br>
<%= f.text_area  "body", "value" => @spp.body, :rows => 25, :cols => 100 %>


<br>
<%= submit_tag "Edit page"%> <br>
<% end %>
<% else %>
  <h1> Create a new page for the "Student Peace Prize" homepage: </h1>

<% form_for :spp_page, @spp_article, :url => { :action => "new" }, :html => {:method => "get"} do |f| %>
Title: <br>
<%= f.text_field "title", :size => 102 %>
    
<br>Ingress:<br>
<%= f.text_area "ingress", :rows => 10, :cols => 100 %>
   
<br>Text:<br>
<%= f.text_area  "body", :rows => 25, :cols => 100 %>

<br>
<%= submit_tag "Add new page"%> <br>
<% end %>
<% end %>
<h3>Formatting</h3>
