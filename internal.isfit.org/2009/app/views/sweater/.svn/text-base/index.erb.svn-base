<h1>ISFiT 2009 Sweater Collection</h1>

<p>Below is a list of all sweaters available. Choose the sweater you want to buy, select the right size for you and click the Buy button.</p>
<br />
<% @sweaters.each do |sweater| %>
	
	<div style="width:480px;float: left;height:280px;margin:5px;border-bottom: 1px solid gray;">
		<h3><%= sweater[:title] %></h3>
		<div style="float:left;margin-right:5px;">	
					<% if FileTest.exists?("#{RAILS_ROOT}/public/images/sweater/#{sweater[:event_id]}_front.png")%>
					<div>	
						<%= image_tag ("sweater/#{sweater[:event_id]}_front.png" ,:width=>"180") %>
						<br />
						&nbsp;&nbsp;							
						<%= link_to(image_tag("magnify.png", :title => "Zoom", :border=>"0",:width=>"22"),
							{:action => :show_image, :id => "#{sweater[:event_id]}"},
							:popup => ['Zoom', 'height=600,width=1200']) %>
					</div>				
					<% else %>
						<%= image_tag "profile_images/NoPictureAvailable.jpg" ,:align=>"left", :width=>"180", :alt=> "" %>
					<% end %>
		
		</div>
		<div style="float:left;">
			<br />
			<b>Price:</b> NOK <%= sweater[:prices][0][:amount]%><br /><br />
			<% form_for :purchase, @purchase,  :url => {:action => :verify} do |f| %>
				<%= f.hidden_field :title, :value => sweater[:title] %>
				<%= f.hidden_field :event_id, :value => sweater[:event_id] %>
				<b>Size:</b>&nbsp;&nbsp; <%= f.select :sweater, sweater[:prices].collect { 
						|p| [p[:size], p[:id] + "_" + p[:amount] +"_"+ p[:size]] } %> 
				<br /><br /><br />
				<%= f.submit "Buy", :style => "width: 80px"%>	
			<% end %>
		</div>
	</div>

<% end %>

