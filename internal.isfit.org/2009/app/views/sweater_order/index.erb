<h2>Orders</h2>
<% id = ((@id.to_i+1).modulo(2)) %>
<%= link_to id == 1 ? "Skjul timeout's" : "Vis alle", :action => :index, :id => id %>
<table cellspacing="0" cellpadding="4" style="border: 1px solid #ccc">
    <tr>
        <td align="center" width="40"><b><%= sort_header_tag('id',
            :text => 'ID') %></b></td>
        <td width="100"><b><%= sort_header_tag('created_at',
            :text => 'Created at') %></b></td>
        <td width="30"><b><%= sort_header_tag('payment_method',
            :text => 'Payment') %></b></td>
        <td width="200"><b><%= sort_header_tag('price_group',
            :text => 'price_group') %></b></td>
        <td width="80"><b><%= sort_header_tag('user_id',
            :text => 'User') %></b></td>
        <td width="80"><b>Paid</b></td>
		<!--<td>User Aborted </td>-->
    </tr>
<% row = 1 %>
<% @orders.each do |order| %>
    <tr<%= row % 2 == 1 ? ' class="alternate"' : '' %> <%= order.abort ? 'style="color:gray"' : ''%> >
        <td align="right" style="padding-right: 12px"><%= order.id %></td>
        <td><%= order.created_at.strftime("%H:%M, %d/%m/%Y") %></td>
        <td><%= order.payment_method %></td>
        <td><%= Sweater.sweater_info(order.price_group) %></td>
        <td><%= LdapUser.get_by_id(order.user_id).username %></td>
		<td>
			<%
			status = Sweater.purchase_status(order.pmd)
      		@paid = status[0]
      		@timeout = status[1]
			%>
			<% if @paid %>
			Paid
			<% elsif @timeout %>
			Timeout
			<% else %> 
			In process
			<% end %>

		</td>
		<!--<td>
			<%= order.abort %>
			<% unless order.abort %>
			<%= link_to "del", :action => :abort, :id => order.id %>
			<% end %>
		</td>-->
    </tr>
<% row += 1 %>
<% end %>
</table>
<p><%= will_paginate @orders %></p>

