<h1>Watch log</h1>
<table border="0" cellspacing="5" cellpadding="5"  style="text-align: left;">
	<tr>
		<th>Logged by:</th>
		<td><%=@watch_log.logged_by%></td>
	</tr>	
	<tr>
		<th>Start time:</th>
		<td><%=@watch_log.start_time.strftime("%d %b %Y @ %H:%M")%></td>
	</tr>	
	<tr>
		<th>End time:</th>
		<td><%=@watch_log.end_time.strftime("%d %b %Y @ %H:%M")%></td>
	</tr>	
	<tr>
		<th>Watching functionary:</th>
		<td><%=@watch_log.watching_functionary%></td>
	</tr>	
	<tr>
		<th>Missing functionary:</th>
		<td><%=@watch_log.missing_functionary%></td>
	</tr>	
	<tr>
		<th>Substitute functionary:</th>
		<td><%=@watch_log.substitute_functionary%></td>
	</tr>	
</table>
<h2>Watch summary:</h2>
<%=format(@watch_log.watch_summary)%>

<h2>Important messages for next watch:</h2>
<%=format(@watch_log.next_watch_important_message)%>
