<h1> WHO AM I ??? </h1>

<div style="float:left; margin: 10px">
<% if @answer_correct != nil %>

	<% if @answer_correct %>

	<h2> CORRECT ANSWER </h2>

	<% else %>

	<h2> INCORRECT ANSWER </H2>

	<h3> Correct name is
		<%= @correct_func.firstname + " " + @correct_func.lastname %>
	</h3>

	<% end %>

<% end %>

<br>

<% form_for(:guess, :html => {:name => "guess_form"}) do |f| %>
	<%= f.hidden_field(:answer_id, :value=> @fasit.id) %>
	<% @func_array.each do |user| %>
		
		<p>
		<%= f.radio_button :user, user.username, {:onclick => "document.guess_form.submit();"} %>	
		<%= user.firstname + " " + user.lastname %>
		</p>
	
	<% end %>
<% end %>

<br>
<br>
<br>

<%= link_to("Highscores", :controller=>"who_am_i", :action=>"highscore") %>

</div>

<div style="float:left; margin: 10px">

<%= image_tag "profile_images/#{@fasit.id}.jpg", :title=> "", :alt=> "" %>

</div>
