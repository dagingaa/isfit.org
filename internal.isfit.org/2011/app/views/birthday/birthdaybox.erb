<% 		
	today = @users.select do |user| 
		user.date_of_birth.day == Date.today.day && user.date_of_birth.month == Date.today.month
		end
	
	if !today.empty?
%>
<b>
<%=
	"Today:"
%>
</b>
<br>
<%
		today.each do |user|
%>
<%= 
	link_to("#{user.lastname}, #{user.firstname}", :controller=>"user", :action=>"show", :id=>user.dn) + " (#{Date.today.year - user.date_of_birth.year})."
%>
<br>
<%
		end
	end 
%>

