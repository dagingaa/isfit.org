<div>
<%
@months = ["januar", "februar", "mars", "april", "mai", "juni", "juli", "august", "september", "oktober", "november", "desember"]


if Language.to_s == 'no'
  
 @selected= @months[(blog.created_at.month)-1]
%>
  <h2><%= blog.created_at.strftime("%d.")%> <%=@selected%>:      <%=blog.title%></h2> 
<%
else
%>
    <h2><%= blog.created_at.strftime("%B %d:") %>   <%=blog.title%></h2>
   
<% end %>

<p><%= format(blog.body) %></p>
<p><small>

</small></p> 
</div>