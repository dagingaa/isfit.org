<%= javascript_include_tag :defaults %>
<%= javascript_include_tag 'prototype' %>

<p>
	<%= link_to "<<", :controller => "calendar_event", 
		:action => "show",:id => params[:id].to_date-1 %>
	<strong>&nbsp;<%=params[:id].to_date.strftime("%d %b %Y")%>&nbsp;</strong>

	<%= link_to ">>", :controller => "calendar_event", 
			:action => "show",:id => params[:id].to_date+1 %>
</p>

<p>
	<%= link_to "Create calendar event", :controller => "calendar_event", :action => "create",:date => params[:id]%>
</p>

<% if @events.size == 0%>
	No events today!
<%end%>
<div class="article">
	<table>
		<% for event in @events %>
			<%= render(:partial => 'calendar_event/info', :locals => {:event => event, :current_user => current_user, :action_param => "show"}) %>
		<% end %>
	</table>
</div>
<p>
	<%= link_to "Return to month view", :controller => "calendar_event", :action => "index" , :month => params[:id].to_date.mon%>
</p>