<h1>
People attending <%=@event.title%>	
</h1>
<%= link_to "Go back", :controller => "calendar_event", :action => "index" , :month => session[:month] %>

<% if @event.attendants == true%>
	<% val = CalendarEventController.get_current_RSVP(@event.id,current_user.id)%>
	<p>Your status: <%=$rsvp_text[val-1]%></p>
	
	<table border="0" cellspacing="5" cellpadding="5">
		<tr>
			<% 1.upto($rsvp_text.length-1) do |i|%>
				<% temp = CalendarEventController.get_attendants(@event.id,i) %>
					<td valign ="top">
						<table>
							<tr>
								<td colspan="2"><h2><%=$rsvp_text[i-1]%> (<%=temp.length%>)</h2></td>
							</tr>

						<% for user_id in temp%>
							<tr>
								<td>
								<% if FileTest.exists?("#{RAILS_ROOT}/public/images/profile_images/#{user_id}.jpg")%>
									<%= image_tag ("profile_images/#{user_id}.jpg" ,:align=>"left", :height=>"50", :alt=> "", :border=>0 ) %>
								<% else %>
									<%= image_tag "profile_images/NoPictureAvailable.jpg" ,:align=>"left", :height=>"50", :alt=> "" %>
								<% end %>
								</td>
								<td>
								<%= link_to LdapUser.get_by_id(user_id).firstname + " " +
									LdapUser.get_by_id(user_id).lastname, 
									:controller => "user", :action => "show", 
									:id => LdapUser.get_by_id(user_id).dn %>
							
							</td>
							</tr>	
						<%end%>
						
						</table>
					</td>
		
			<%end%>
		</tr>
	</table>
	
<%end%>