
<%if @availableforall || @transportmember%>
	<%= javascript_include_tag :defaults %>
	<%form_for :car_reservation, @car_reservation, :url => { :action => "update", :week => params[:week] } do |f|%>
		<h1>Car reservation</h1>
		<table>
			<tr>
				<th align=left width=110>Reservation from:</th>
				<td align=left><%=f.hidden_field :time_from, :value => @time%><%=@time.strftime("%A %d %b, %H:%M")%></td>
				<td width = 100></td>
			</tr>
			<tr>
				<th align=left>Reservation for:</th>
				<td>
					<%if @carsavail%>
						<%= select_tag :time_to, options_for_select(@houres_for_res) %> hours
					<%end%>	
				</td>
				
			</tr>
			<tr>
				<th align=left>Car:</th>
				<td><%=f.hidden_field :car_id, :value=>params[:car_id]%><%=@currentcar.name%></td>

			<tr>
				<th align=left>Travel route:</th>
				<td align=left><%=f.text_area :route, :size => "40"%></td>
			</tr>
			<tr>
				<th align=left>Comment:</th>
				<td align=left><%=f.text_area :comment, :size=>"39x3"%></td>
			</tr>
			<%if @transportmember%>
			<tr>
				<th>Unit</th>
				<td><%= select(:car_reservations, :unit, @units) %></td>
			</tr>
			<%end%>
		</table>
		<br>
		<%=submit_tag'Add reservation'%>


	<div id="car_info" style="width:200px">

	</div>
	<%end%>
<%else%>
	<h1>We're sorry, but you can not reserve a car when it is less than<br /> 
	24 hours before date of use. Please contact transport on 47177674</h1>
<%end%>

