<h1>Your reservations</h1>
<table cellspacing="0" cellpadding="4" style="border: 1px solid #ccc">
<%row = 1%>
	<tr align ="center" <%= row % 2 == 1 ? ' class="alternate"' : '' %>>
		<th width =75>Date</th>
		<th width =75>Car</th>
		<th width =75>Time from</th>
		<th width =75>Time to</th>
		<th width =120>Travel route</th>
		<th width =150>Comment</th>
		<th width =50>Edit</th>
		<th width =50>Delete?</th>
	</tr>
	<%row+=1%>
	<%if @yourres !=nil%>
		<%@yourres.each do |res|%>
			<tr align ="center" <%= row % 2 == 1 ? ' class="alternate"' : '' %>>
				<td align = center><%=res.time_from.strftime("%Y-%m-%d")%></td>
				<td align = center><%=Car.find_reserved_car(res.car_id).name%></td>
				<td align = center><%=res.time_from.strftime("%H:%M:%S")%></td>
				<td align = center><%=res.time_to.strftime("%H:%M:%S")%></td>
				<td align = center><%=res.route%></td>
				<td align = center><%=res.comment%></td>
				<%if (res.time_from - @timenow) > 86400 || @transportmember %>
					<td align = center><%=link_to "Edit", :controller=> "car_reservation", :action =>"edit", :res_id => res.id%></td>
					<td align = center><%=link_to "Delete", :controller => "car_reservation", :action =>"delete", :res_id => res.id%></td>
				<%else%>
					<td colspan = 2 align = center>Please contact Transport on phone 47177674</td>
				<%end%>
			<tr>

		<%end%>
	<%end%>
</table>