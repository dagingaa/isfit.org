<style>
	body, td {
		font-family: Verdana;
		font-size: 7pt;
	}
</style>
<%if @showparticipants %>
	<% @participants.each do |participant| %>
	<h3>Personal information:</h3>
	<table cellspacing="0" cellpadding="2">
		<tr>
			<td><b>ID:</b></td>
			<td colspan="4"><%= participant.id %></td>
		</tr>
		<tr valign="top">
			<td width="120"><b>First name: </b></td>
			<td><%= participant.first_name %></td>
			<td width="20"></td>
			<td width="100"><b>Telephone: </b></td>
			<td><%= participant.phone %></td>
		</tr>
		<tr class="alternate" valign="top">
			<td><b>Middle name: </b></td>
			<td><%= participant.middle_name %></td>
			<td width="20"></td>
			<td><b>Fax/facsimile: </b></td>
			<td>
				<%= participant.fax %>
			</td>
		</tr>
		<tr valign="top">
			<td><b>Last name: </b></td>
			<td><%= participant.last_name %></td>
			<td width="20"></td>
			<td><b>Email address: </b></td>
			<td><%= participant.email %></td>
		</tr>
		<tr class="alternate" valign="top">
			<td>
				<b>Address: </b>
			</td>
			<td>
				<%= participant.address1 %>
			</td>
			<td width="20"></td>
			<td><b>Nationality: </b></td>
			<td><%= participant.nationality %></td>
		</tr>
		<tr valign="top">
			<td>
			</td>
			<td>
				<%= participant.address2 %>
			</td>
			<td width="20"></td>
			<td><b>Date of birth: </b></td>
			<td><%= participant.birthdate %></td>
		</tr>
		<tr class="alternate" valign="top">
			<td>	
				<b>ZIP code: </b>
			</td>
			<td><%= participant.zipcode %></td>
			<td width="20"></td>
			<td><b>Sex:</b></td>
			<td><%= participant.sex == 'm' ? 'Male' : 'Female' %></td>
		</tr>
		<tr valign="top">
			<td><b>City/Town:</b></td>
			<td><%= participant.city %></td>
			<td width="20"></td>
			<td><b>University: </b></td>
			<td><%= participant.university %>	</td>
		</tr>
		<tr class="alternate" valign="top">
			<td><b>Country:</b></td>
			<td><%= participant.country.name %></td>
			<td width="20"></td>
			<td><b>Field of study: </b></td>
			<td><%= participant.field_of_study %>	</td>
		</tr>
		<tr valign="top">
			<td><b>Organization name:</b></td>
			<td><%= participant.org_name %></td>
			<td></td>
			<td><b>Hear about ISFiT:</b></td>
			<td><%=participant.hear_about_isfit%></td>
		</tr>
		<tr class="alternate" valign="top">
			<td><b>Postion: </b></td>
			<td><%= participant.org_function %></td>
			<td></td>
			<td><b>Hear about ISFiT, other:</b></td>
			<td><%=participant.hear_about_isfit_other != "" ? participant.hear_about_isfit_other : '-'%></td>
		</tr>
		<tr valign="top">
			<td width="240"><b>Travel Apply:</b></td>
			<td><%=participant.travel_apply == 1 ? 'Yes' : 'No'%> </td>
			<td width="20"</td>
			<td width="200"><b>Travel amount:</b></td>
			<td><%=participant.travel_amount%> $</td>
		</tr>
		<tr class="alternate" valign="top">
			<td><b>Obtain support from other sources:</b></td>
			<td><%=participant.travel_nosupport_other == 1 ? 'Yes' : 'No'%></td>
			<td></td>
			<td><b>Can come without support:</b>
			<td><%=participant.travel_nosupport_cancome == 1 ? 'Yes' : 'No'%></td>
		</tr>
		<tr valign="top">
			<td><b>Have you applied for ISFiT Workshop:</b></td>
			<td><%=participant.apply_workshop == 1 ? 'Yes' : 'No'%></td>
		<tr>
	</table>
	<table>
		<tr>
			<td colspan="2">
				<b>Essay 1 - Background:</b>
				<%= format(participant.essay1.strip) %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<b>Essay 2 - The Conflict:  </b>
				<%= format(participant.essay2.strip) %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<b>Essay 3 - Visions for your country:  </b>
				<%= format(participant.essay3.strip) %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<b>Essay 4 - Reflection:  </b>
				<%= format(participant.essay4.strip) %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<b>Travel essay:</b>
				<%= format(participant.travel_essay.strip) %>
			</td>
		</tr>
	</table>
	<div style="page-break-after:always"></div>
	<%end%>
<%else%>
	<%=link_to "PART 1 Countries: Turkey and Cyprus, Nationality: Cypriot*", :id =>"1"%> <br />
	<%=link_to "PART 2 Countries: Georgia, Nationality: Abkhazian, Abkhaz and Georgian", :id =>"2"%><br />
	<%=link_to "PART 3 Countries: Israel and Palestine", :id =>"3"%>
<% end %>
