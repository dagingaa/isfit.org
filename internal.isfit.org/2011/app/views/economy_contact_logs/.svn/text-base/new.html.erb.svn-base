<h1>New economy_contact_log</h1>

<% form_for(@economy_contact_log) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :festival %><br />
    <%= f.select :festival_id, Festival.to_select.reverse %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :advice %><br />
    <%= f.text_area :advice %>
  </p>
  <p>
    <%= f.hidden_field :economy_contact_unit_id, :value => params[:economy_contact_unit] %>
    <%= f.hidden_field :functionary_id, :value => current_user.id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', economy_contact_logs_path %>
