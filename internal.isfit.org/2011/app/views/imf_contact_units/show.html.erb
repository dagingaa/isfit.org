<h1><%=h @imf_contact_unit.name %> - <%=h @imf_contact_unit.imf_contact_status.name %></h1>
<%= link_to 'Edit', edit_imf_contact_unit_path(params[:tab],@imf_contact_unit) %> |
<%= link_to 'Back', imf_contact_units_path %>
<h4>Address</h4>
<p><%=h @imf_contact_unit.address %><br>
  <%=h @imf_contact_unit.street %><br>
  <%=h @imf_contact_unit.zip_code %> <%= @imf_contact_unit.city %><br>
  <%=h @imf_contact_unit.country.name %>
</p>
<h2>Info</h2>
<p>
  <b>Responsible for this unit:</b>
  <%=h LdapUser.get_by_id(@imf_contact_unit.ldap_responsible_id).firstname %> <%=h LdapUser.get_by_id(@imf_contact_unit.ldap_responsible_id).lastname %>
</p>

<p>
  <b>This person has sent the application:</b>
  <% if @imf_contact_unit.ldap_sent_person_id %>
    <%=h LdapUser.get_by_id(@imf_contact_unit.ldap_sent_person_id).firstname %> <%=h LdapUser.get_by_id(@imf_contact_unit.ldap_sent_person_id).lastname %>
  <% else %>
    No one has sent this application yet!
  <%end%>
  </p>

<p>
  <a href="<%=h @imf_contact_unit.file_path %>">Download Application file</a>
</p>
<h2>Comments</h2>
<div id="comments">
  <%= render :partial => @imf_contact_unit.imf_contact_comments.reverse %>
</div>
<% remote_form_for (ImfContactComment.new, :url => {:controller => "imf_contact_comments", :tab => params[:tab], :action => "create"}) do |f| %>
  <!-- Comment form -->
  <h4>Add a comment</h4>
  <p>
    <%= f.text_area :content %>
  </p>
  <%= f.hidden_field :imf_contact_unit_id, :value => @imf_contact_unit.id %>
  <%= f.hidden_field :functionary_id, :value => current_user.id %>
  <%= f.submit "Add comment" %>
<% end %>
