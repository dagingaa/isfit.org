<h1>Listing isfit_media_links</h1>

<table cellspacing="0" cellpadding="4" style="border: 1px solid #ccc">
  <tr>
    <th width="200">Norsk tittel</th>
    <th width="200">Engelsk tittel</th>
  </tr>
  <% row = 1 %>
<% for isfit_media_link in @isfit_media_links %>
  <tr class="<%= row % 2 == 1 ? 'alternate' : '' %>">
    <td><%= link_to isfit_media_link.short_desc_no, isfit_media_link.link %></td>
    <td><%= isfit_media_link.short_desc_en %></td>
    <td><%= link_to 'Edit', edit_isfit_media_link_path(params[:tab],isfit_media_link) %></td>
    <td><%= link_to 'Destroy', isfit_media_link_path(params[:tab],isfit_media_link), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% row += 1 %>
<% end %>
</table>

<br />

<%= link_to 'New isfit_media_link', new_isfit_media_link_path %>
