<h1>Participant application</h1>

<h3>Supplied information</h3>
<table cellspacing="0" cellpadding="2">
	<tr valign="top">
		<td width="120"><b>First name: </b></td>
		<td width="200"><%= @participant.first_name %></td>
		<td width="20"></td>
		<td width="100"><b>Telephone: </b></td>
		<td width="200"><%= @participant.phone %></td>
	</tr>
	<tr class="alternate" valign="top">
		<td><b>Middle name: </b></td>
		<td><%= @participant.middle_name %></td>
		<td width="20"></td>
		<td><b>Fax/facsimile: </b></td>
		<td>
			<%= @participant.fax %>
		</td>
	</tr>
	<tr valign="top">
		<td><b>Last name: </b></td>
		<td><%= @participant.last_name %></td>
		<td width="20"></td>
		<td><b>Email address: </b></td>
		<td><%= @participant.email %></td>
	</tr>
	<tr class="alternate" valign="top">
		<td>
			<b>Address: </b>
		</td>
		<td>
			<%= @participant.address1 %>
		</td>
		<td width="20"></td>
		<td><b>Nationality: </b></td>
		<td><%= @participant.nationality %></td>
	</tr>
	<tr valign="top">
		<td>
		</td>
		<td>
			<%= @participant.address2 %>
		</td>
		<td width="20"></td>
		<td><b>Date of birth: </b></td>
		<td><%= @participant.birthdate %></td>
	</tr>
	<tr class="alternate" valign="top">
		<td>	
			<b>ZIP code: </b>
		</td>
		<td><%= @participant.zipcode %></td>
		<td width="20"></td>
		<td><b>Sex:</b></td>
		<td><%= @participant.sex == 'm' ? 'Male' : 'Female' %></td>
	</tr>
	<tr valign="top">
		<td><b>City/Town:</b></td>
		<td><%= @participant.city %></td>
		<td width="20"></td>
		<td><b>University: </b></td>
		<td><%= @participant.university %>	</td>
	</tr>
	<tr class="alternate" valign="top">
		<td><b>Country:</b></td>
		<td><%= @participant.country.name %></td>
		<td width="20"></td>
		<td><b>Field of study: </b></td>
		<td><%= @participant.field_of_study %>	</td>
	</tr>
	<tr valign="top">
		<td><b>Organization name:</b></td>
		<td><%= @participant.org_name %></td>
		<td></td>
		<td><b>Workshop 1:</b></td>
		<td><%= @participant.workshop1 %></td>
	</tr>
	<tr class="alternate" valign="top">
		<td><b>Postion: </b></td>
		<td><%= @participant.org_function %></td>
		<td></td>
		<td><b>Workshop 2: </b></td>
		<td><%= @participant.workshop2 %></td>
	</tr>
	<tr valign="top">
		<td><b>Travel support requested:</b></td>
		<td><%= @participant.travel_apply == 1 ? 'Yes' : 'No' %></td>
		<td></td>
		<td><b>Travel support required:</b></td>
		<td><%= @participant.travel_nosupport_cancome == 1 ? 'No' : 'Yes' %></td>
	</tr>
	<tr valign="top" class="alternate">
		<td><b>Travel support amount:</b></td>
		<td><%= @participant.travel_amount %></td>
		<td colspan="3"></td>
	</tr>
</table

<h3>Essays</h3>
<div style="width:660px">
	<h4>Travel support essay</h4>
	<div style="border: 1px solid #ccc; padding: 2px">
		<%= format(@participant.travel_essay) %>
	</div>
	<h4>Essay 1 - Background</h4>
	<div style="border: 1px solid #ccc; padding: 2px">
		<%= format(@participant.essay1) %>
	</div>
	<h4>Essay 2 - Workshops</h4>
	<div style="border: 1px solid #ccc; padding: 2px">
		<%= format(@participant.essay2) %>
	</div>
</div>

