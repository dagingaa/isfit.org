<h1> Accommodation </h1>

Total number of occupied beds:
<%= @count_bed %> <br>
Number of occupied beds the first night:
<%= @count_bed_first %> <br>
Number of occupied beds the second night:
<%= @count_bed_second %> <br>
Nymber of occupied sheets:
<%= @count_bedding %>
<br>
<% form_for :participant, @participants do |f| %>
<table cellspacing="0" cellpadding="4" style="border: 1px solid #ccc">
	<tr>
		<td align="center" width="40"><b><%= sort_header_tag('participants.id',
			:text => 'ID') %></b></td>
		<td align="center" width="100"><b><%= sort_header_tag('first_name',
      :text => 'First name') %> </b> </td>
    <td align="center" width="100"><b><%= sort_header_tag('middle_name',
      :text => 'Middle name') %> </b> </td>
		<td width="200"><b><%= sort_header_tag('last_name',
			:text => 'Last name') %></b></td>
		<td width="80"><b><%= sort_header_tag('bed', 
			:text => 'Bed') %></b></td>
		<td width="40"><b><%= sort_header_tag('bedding',
			:text => 'Bedding') %></b></td>
	</tr>
<% row = 1 %>
<% @participants.each do |participant| %>
	<tr<%= row % 2 == 1 ? ' class="alternate"' : '' %>>
		<td align="right" style="padding-right: 12px"><%= participant.id %></td>
		<td><%= participant.first_name %> </td>
		<td><%= participant.middle_name %> </td>
		<td><%= participant.last_name %></td>
		<td> <% if participant.bed == 1 %>
          18.-19.
         <% else if participant.bed == 2 %>
         19.-20. 
         <% else %>
         18.-20.
         <% end %>
    </td>         
		<td><%= participant.bedding == 1 ? "Yes" : "No" %></td>
	</tr>
<% row += 1 %>
<% end %>
<% end %>
<% end %>
</table>
<br/>
<% if @per_page != 0 %>
<p><%= will_paginate @participants %></p>
<% end %>