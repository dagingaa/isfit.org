<style>
	body { margin: 0; padding: 0 }
	body, td { font-size: 9pt }
</style>
<table width="100%" cellpadding="0" cellspacing="0"> 
<% 
	for i in 0..(@participants.length-1) 
		p = @participants[i]	
%>

<%= (i % 3 == 0 and i > 0) ? '</tr>' : '' %>

<% if i % 24 == 0 and i > 0 %>
</table>
<div style="page-break-after:always"></div>
<table width="100%" cellpadding="0" cellspacing="0">
<% end #if %>

<%= i % 3 == 0 ? '<tr height="140">' : '' %>

<%= i % 3 != 0 ? '<td width="5"></td>'  : '' %>

<td width="32%">
	<%= p.first_name + " " + p.middle_name + " " + p.last_name %><br />
	<%= p.address1 %><br />
	<%= p.address2 != "" ? p.address2 + "<br />" : "" %>
	<%= p.zipcode + " " + p.city %><br />
	<%= p.country.name %>
</td>


<% end #loop %>
</tr>
</table>
