<h1>All pictures:</h1>
<%@photos.each do |picture|%>


  <%#=image_tag picture.original_picture.url%>
  <br />
<%end%>
<table cellspacing="0" cellpadding="4" style="border: 1px solid #ccc">
	<tr>
        <td width="200"><b>Description</b></td>
    <td></td>
		<td></td>
    </tr>
<% row = 1 %>
<% @photos.each do |photo| %>
    <tr class="article_tr<%= row % 2 == 1 ? ' alternate' : '' %>">
    <td><%= photo.description %></td>
        <td>
            <%= link_to(image_tag("icon/edit.png",
                :alt => "E", :title => "Edit", :border => 0),
                crop_photo_path(params[:tab], photo)) %>
        </td>
		<td>
            <%= link_to(image_tag("icon/trash.png",
				:alt => "Delete", :title => "Delete",:border => 0), 
				{:action => "delete", :id=>photo.id, :tab=>params[:tab]},
				:confirm => 'Are you sure you want to delete this article?') %>
        </td>
    </tr>
<% row += 1 %>
<% end %>
</table>




<%=collection_select("stuff", "item_id", @photos, :id, :description )%><br />
