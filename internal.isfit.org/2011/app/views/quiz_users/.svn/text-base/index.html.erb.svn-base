<h1>Listing quiz_users</h1>

<table>
  <tr>
    <th>User</th>
    <th>Question</th>
    <th>Points</th>
    <th>Guesses</th>
  </tr>

<% @quiz_users.each do |quiz_user| %>
  <tr>
    <td><%=h quiz_user.user_id %></td>
    <td><%=h quiz_user.question %></td>
    <td><%=h quiz_user.points %></td>
    <td><%=h quiz_user.guesses %></td>
    <td><%= link_to 'Show', quiz_user %></td>
    <td><%= link_to 'Edit', edit_quiz_user_path(quiz_user) %></td>
    <td><%= link_to 'Destroy', quiz_user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New quiz_user', new_quiz_user_path %>