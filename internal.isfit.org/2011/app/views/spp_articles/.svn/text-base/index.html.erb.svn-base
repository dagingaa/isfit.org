  <h1>Articles</h1>
<p>Below is a list of all articles available for studentpeaceprize.org:</p>

<table cellspacing="0" cellpadding="4" style="border: 1px solid #ccc">
	<tr>
        <td width="200">
            <b><%= sort_header_tag('title_en', :text => 'Title') %></b>
        </td>
        <td width="80">
            <b><%= sort_header_tag('created_at', :text => 'Created') %></b>
        </td>
        
        <td width="100"><b><%#= sort_header_tag('press_release', :text => 'Press release') %></b>
        </td>
        <td width="60"><b>
            <%= sort_header_tag('visible', :text => 'Visible') %></b>
        </td>
    		<td></td>
		    <td></td>
  </tr>
<% row = 1 %>
<% @articles.each do |article| %>
    <tr class="article_tr<%= row % 2 == 1 ? ' alternate' : '' %>">
        <td><%= article.title_en %> </td>
    		<td><%= article.created_at.strftime("%d %b %Y") %></td>
		    <td><%= article.press_release == true ? "Yes" : "No" %></td>
		    <td><%= article.visible == true ? "Yes" : "No" %></td>
		    
        <td>
            <%= link_to(image_tag("icon/edit.png",
                :alt => "E", :title => "Edit", :border => 0),
              edit_spp_article_path(params[:tab],article)) %>
        </td>
		    <td>
            <%= link_to(image_tag("icon/trash.png",
				        :alt => "Delete", :title => "Delete",:border => 0), 
				        {:action => "delete", :id => article.id},
				        :confirm => 'Are you sure you want to delete this article?') %>
        </td>
    </tr>
<% row += 1 %>
<% end %>
</table>

<%= link_to 'New article', new_spp_article_path %>
